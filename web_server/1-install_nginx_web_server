#!/usr/bin/env bash
# Configures a new Ubuntu machine with Nginx
# Nginx listens on port 80 and returns a page containing "Holberton School"

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Create a simple HTML page with the required text
echo "Holberton School for the win!" > /var/www/html/index.html

# Ensure nginx is configured to listen on port 80 (default configuration)
# Start nginx service
service nginx start
